<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="20dp"
    android:minHeight="100dp">
    
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src = "@drawable/logo_icon"/>
    
    <LinearLayout
        android:id="@+id/patient_container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="20190017897"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/label_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical"
            tools:text="09069255596" />
        <TextView
            android:id="@+id/label_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="gogoybert@gmail.com"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="July 30, 2021"/>
    </LinearLayout>
</LinearLayout>
